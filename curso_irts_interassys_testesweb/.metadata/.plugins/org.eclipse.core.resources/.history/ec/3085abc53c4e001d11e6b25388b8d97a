package ClassCalc;

public class Calcular {
	public Double vlA;
	public Double vlB;
	public String operacao;
	public Double resultado;
	
	private void somar() {
		this.resultado = vlA + vlB;
	}
	
	private void subtrair() {
		this.resultado = vlA - vlB;
	}
	
	private void dividir() {
		this.resultado = vlA / vlB;
	}
	
	private void multiplicar() {
		this.resultado = vlA * vlB;
	}
	private void potencializar() {
		this.resultado = Math.pow(vlA, vlB);
	}
	public void calcular() {
		
		switch (operacao) {
		case "*":
			multiplicar();
			break;
		case "/":
			dividir();
			break;
		case "-":
			subtrair();
			break;	
		case "+":
			somar();
			break;	
		case "^":
			potencializar();
			break;
		
		default:
			throw new IllegalArgumentExeptional("Insira um operador valido " + operacao);
		}
	}
}

