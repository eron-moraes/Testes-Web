package calc;

import java.text.MessageFormat;
import java.util.Scanner;

public class EstruturaCondicionalSimples {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int n1;
		int n2;
		boolean isOk = false;
		String resposta;
		
		Scanner entrada = new Scanner(System.in);
		
		
		System.out.println("Informe um número inteiro qualquer>>>");
		n1 = entrada.nextInt();
		
		System.out.println("Informe outro número inteiro");
		n2 = entrada.nextInt();
		
		isOk = (n1 > n2);
		
		if (isOk == true) {
			resposta = MessageFormat.format("O número {0} é maior que o número {1}", n1, n2);
		} else {
			resposta = MessageFormat.format("O número {1} é maior que o número {0}", n1, n2);
		}
		
		System.out.println(resposta);
		
		

	}

}
